
{{#if posts.length}}
  <div class="col-md-6 posts">
    <h3>Blog Posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/posts/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">Comment</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>


